<Application x:Class="zad3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:zad3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush Color="#121315" x:Key="black"/>
        <SolidColorBrush Color="#ffffff" x:Key="white"/>

        <Style TargetType="Label" x:Key="LabelSpecialStyle" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Background" Value="{StaticResource black}"/>
            <Setter Property="Foreground" Value="{StaticResource white}"/>
        </Style>

        <Style TargetType="ListBox" x:Key="ListSpecialStyle" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="{StaticResource black}"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextSpecialStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource white}"/>
        </Style>

        <Style TargetType="TextBox" x:Key="TextBoxSpecialStyle" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Background" Value="{StaticResource black}"/>
            <Setter Property="Foreground" Value="{StaticResource white}"/>
        </Style>
        
    </Application.Resources>
</Application>
